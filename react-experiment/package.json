{
  "name": "react-experiment",
  "version": "1.0.0",
  "description": "Sandbox for testing and experimenting with react code",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "format": "prettier --write \"src/**/*.js\"",
    "eslint-fix": "eslint --ext .js src/ -f html -o ./coverage/eslint-report.html",
    "coverage": "jest --env=jsdom --coverage --json --outputFile=./coverage/outputfile.json",
    "e2e": "cypress run",
    "e2e:watch": "cypress open",
    "test": "jest --env=jsdom --watch",
    "t": "jest --env=jsdom __tests__/routes/todo/Todo --watch"
  },
  "keywords": [],
  "author": "CJV",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/react": "11.2.7",
    "@testing-library/react-hooks": "7.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "27.0.2",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "cypress": "^7.5.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.1",
    "jest": "27.0.4",
    "prettier": "2.3.1",
    "react-test-renderer": "17.0.2",
    "redux-logger": "^3.0.6",
    "style-loader": "2.0.0",
    "webpack": "^5.38.1",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.js",
      "src/routes/todo/*.js"
    ],
    "moduleDirectories": [
      "src",
      "__tests__/testHelper",
      "node_modules"
    ],
    "moduleNameMapper": {
      "testHelper(.*)$": "<rootDir>/__tests__/testHelper/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/cssTransformer.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/fileTransformer.js"
    },
    "testPathIgnorePatterns": [
      "__tests__/testHelper"
    ],
    "testRegex": "__tests__/.*\\.(js|jsx)$",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/config/setupTests.js"
    ]
  }
}
